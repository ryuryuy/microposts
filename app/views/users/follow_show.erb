<% provide(:title, @title) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Microposts:</b> <%= @user.microposts.count %></span>
    
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: 30), user %>
          <% end %>
        </div>
      <% end %>
    </section>
 </aside>    
    <div class="col-md-8">
       <%#= render 'follow_form' if logged_in? %>
       <% if @users.any? %>
          <h3>follow</h3>
      
           <ol class="users follow">
             <% @users.each do |user| %>
             <%= user.name %>
             <br>
             <% end %>
           </ol>
        <% end %>
  </div>
</div> 