<% provide(:title, @title) %>

<div class="row">
  <aside class="col-md-4">
    <%= render 'user_info' %>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: 30), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>    
  <div class="col-md-8">
    <%#= render 'follow_form' if logged_in? %>
    <% if @users.any? %>
      <h3>follow List</h3>
      <ol class="users-follow">
        <%= render @users %>
      </ol>
    <% end %>
  </div>
</div> 